<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="contact-breadcrumb">

                <div class="breadcrumb-main add-contact justify-content-sm-between ">
                    <div class="breadcrumb-main__wrapper">

                        <form action="/" class="d-flex align-items-center add-contact__form my-sm-0 my-2">
                            <img src="<%- locals.base %>img/svg/search.svg" alt="search" class="svg">
                            <input class="form-control me-sm-2 border-0 box-shadow-none" type="search"
                                placeholder="Search by Name" aria-label="Search">
                        </form>

                    </div>
                    <% if (successMessages.length> 0) { %>
                        <div class="alert-icon-big alert alert-success " role="alert">
                            <div class="alert-icon">
                                <img src="<%- locals.base %>img/svg/layers.svg" alt="layers" class="svg">
                            </div>
                            <div class="alert-content">
                                <% successMessages.forEach(function(message) { %>
                                    <p>
                                        <%= message %>
                                    </p>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>

                            <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                                <div
                                    class="d-flex align-items-center add-contact__title justify-content-center me-sm-25">
                                    <span class="sub-title ms-sm-25 ps-sm-25"></span>
                                </div>
                                <div class="action-btn mt-sm-0 mt-15">
                                    <a href="<%- locals.base %><%- session.userType %>/candidate/create/<%- locale %>"
                                        class="btn px-20 btn-primary ">
                                        <i class="las la-plus fs-16"></i>Add New
                                    </a>
                                </div>
                            </div>
                </div>

            </div>
            <!-- ends: contact-breadcrumb -->
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-30">
            <div class="card">
                <div class="card-header color-dark fw-500">
                    User List
                </div>

                <div class="card-body">

                    <div class="userDatatable global-shadow border-light-0 w-100">
                        <div class="table-responsive">
                            <table class="table mb-0 table-borderless">
                                <thead>
                                    <tr class="userDatatable-header">
                                        <th>
                                            <div class="d-flex align-items-center">
                                                <div class="custom-checkbox  check-all">
                                                    <input class="checkbox" type="checkbox" id="check-45">
                                                    <label for="check-45">
                                                        <span class="checkbox-text userDatatable-title">Name</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">phone</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">age</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">gender</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">current location</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">monthly expected salary</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title">resume</span>
                                        </th>
                                        <th>
                                            <span class="userDatatable-title float-end">action</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (candidates.length===0) { %>
                                        <tr>
                                            <td colspan="7">
                                                <p class="text-center">No Customer Found !</p>
                                            </td>
                                        </tr>
                                        <% }else{ %>
                                            <% candidates.forEach(function(row) { %>
                                                <tr>
                                                    <td>
                                                        <div class="d-flex">
                                                            <div
                                                                class="userDatatable__imgWrapper d-flex align-items-center">
                                                                <div class="checkbox-group-wrapper">
                                                                    <div class="checkbox-group d-flex">
                                                                        <div
                                                                            class="checkbox-theme-default custom-checkbox checkbox-group__single d-flex">
                                                                            <input class="checkbox" type="checkbox"
                                                                                id="check-grp-1">
                                                                            <label for="check-grp-1"></label>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                            <div class="userDatatable-inline-title">
                                                                <a href="#" class="text-dark fw-500">
                                                                    <h6>
                                                                        <%- row.name %>
                                                                    </h6>
                                                                </a>
                                                                <p class="d-block mb-0">
                                                                    <%- row.email %>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <%- row.phone %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <%- row.age %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <%- row.gender %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <%- row.current_location %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <%- row.monthly_expected_salary %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="userDatatable-content">
                                                            <button class="btn-primary">Resume</button>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                                            <li>
                                                                <a href="#" class="view">
                                                                    <i class="uil uil-eye"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="<%- locals.base %><%- session.userType %>/candidate/edit/<%- row.id %>/<%- locale %>"
                                                                    class="edit">
                                                                    <i class="uil uil-edit"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="#" onclick="
                                                    if(confirm('Are you sure you want to delete ?')){                                    
                                                       event.preventDefault();
                                                       document.getElementById('delete-<%- row.id %>').submit();
                                                    }else{
                                                       event.preventDefault();
                                                    }
                                                 " class="remove">
                                                                    <i class="uil uil-trash-alt"></i>
                                                                </a>
                                                                <form style="display:none;" id="delete-<%- row.id %>"
                                                                    action="<%- locals.base %><%- session.userType %>/candidate/delete/<%- row.id %>/<%- locale %>"
                                                                    method="POST">
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>