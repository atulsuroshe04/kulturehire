<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-main user-member justify-content-sm-between ">
                <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                    <div class="d-flex align-items-center user-member__title justify-content-center me-sm-25">
                        <h4 class="text-capitalize fw-500 breadcrumb-title">Employer Actions</h4>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="userDatatable global-shadow border-0 p-30 bg-white radius-xl w-100 mb-30">
                <div class="">
                    <table class="table mb-0 table-borderless">
                        <thead>
                            <tr class="userDatatable-header">
                                <th>
                                    <div class="d-flex align-items-center">
                                        <div class="custom-checkbox  check-all">
                                            <label for="check-3">
                                                <span class="checkbox-text userDatatable-title">candidate</span>
                                            </label>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <span class="userDatatable-title">employer</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">action</span>
                                </th>
                                <th>
                                    <span class="userDatatable-title">Date</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data.length> 0) {
                                let sr = 1;
                                %>
                                <% data.forEach(function(row) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex">
                                                <div class="userDatatable__imgWrapper d-flex align-items-center">
                                                    <div class="checkbox-group-wrapper">
                                                        <div class="checkbox-group d-flex">
                                                            <div
                                                                class="checkbox-theme-default custom-checkbox checkbox-group__single d-flex">

                                                                <label for="check-grp-12"></label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <a href="#" class="profile-image rounded-circle d-block m-0 wh-38"
                                                        style="background-image:url('<%- locals.base %>img/tm6.png'); background-size: cover;"></a>
                                                </div>
                                                <div class="userDatatable-inline-title">
                                                    <a href="#" class="text-dark fw-500">
                                                        <h6><%- row.candidate_id.name%></h6>
                                                    </a>
                                                    <p class="d-block mb-0">
                                                        <%- row.candidate_id.email%>
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="userDatatable-content">
                                                <%- row.employer_id?.company_name%>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="userDatatable-content">
                                                <span
                                                    class="bg-opacity-success  color-success rounded-pill userDatatable-content-status active">
                                                    <% if (row.action==='resume_download' ) { %>
                                                        <%= "Resume Downloaded" %>
                                                            <% } else { %>
                                                                <%= "Viewd Contact" %>
                                                                    <% } %>
                                                </span>
                                            </div>
                                        </td>

                                        <td>
                                            <%- moment(row.createdAt).format('Do MMMM YYYY, h:mm a') %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>