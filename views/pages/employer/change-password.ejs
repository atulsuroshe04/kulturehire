<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="contact-breadcrumb">

                <div class="breadcrumb-main add-contact justify-content-sm-between ">
                    <div class=" d-flex flex-wrap justify-content-center breadcrumb-main__wrapper">
                        <div class="d-flex align-items-center add-contact__title justify-content-center me-sm-25">
                            <h4 class="text-capitalize fw-500 breadcrumb-title">Change Password</h4>
                            <span class="sub-title ms-sm-25 ps-sm-25"></span>
                        </div>
                    </div>

                </div>

            </div>
            <!-- ends: contact-breadcrumb -->
        </div>
    </div>

    <div class="card mb-50">
        <div class="row justify-content-center">
            <div class="col-md-7 col-10">
                <div class="mt-40 mb-50">
                    <% if (successMessages.length> 0) { %>
                        <div class="alert-icon-big alert alert-success " role="alert">
                            <div class="alert-icon">
                                <img src="<%- locals.base %>img/svg/layers.svg" alt="layers" class="svg">
                            </div>
                            <div class="alert-content">
                                <% successMessages.forEach(function(message) { %>
                                    <p>
                                        <%= message %>
                                    </p>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>
                            <% if (errorMessages.length> 0) { %>
                                <div class="alert-icon-big alert alert-danger " role="alert">
                                    <div class="alert-icon">
                                        <img src="<%- locals.base %>img/svg/layers.svg" alt="layers" class="svg">
                                    </div>
                                    <div class="alert-content">
                                        <% errorMessages.forEach(function(message) { %>
                                            <p>
                                                <%= message %>
                                            </p>
                                            <% }) %>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="horizontal-form">
                                        <form class="was-validated"
                                            action="<%- locals.base %><%- session.userType%>/change-password/<%- locale %>"
                                            method="post">
                                            <div class="form-group row mb-25">
                                                <div class="col-sm-3 d-flex aling-items-center">
                                                    <label for="inputNameIcon"
                                                        class=" col-form-label color-dark fs-14 fw-500 align-center">Current
                                                        Password
                                                    </label>
                                                </div>
                                                <div class="col-sm-9">
                                                    <div class="with-icon">
                                                        <span class="la-password lar color-gray"></span>
                                                        <input type="password"
                                                            class="form-control is-invalid  ih-medium ip-gray radius-xs b-light"
                                                            id="inputNameIcon" placeholder="" name="current_password"
                                                            required>
                                                    </div>
                                                    <% if (locals.errors && locals.errors.current_password) { %>
                                                        <span class="text-danger"><%- errors.current_password %></span>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <div class="form-group row mb-25">
                                                <div class="col-sm-3 d-flex aling-items-center">
                                                    <label for="inputNameIcon"
                                                        class=" col-form-label color-dark fs-14 fw-500 align-center">New
                                                        Password
                                                    </label>
                                                </div>
                                                <div class="col-sm-9">
                                                    <div class="with-icon">
                                                        <span class="la-password lar color-gray"></span>
                                                        <input type="password"
                                                            class="form-control is-invalid  ih-medium ip-gray radius-xs b-light"
                                                            id="inputNameIcon" placeholder="" name="new_password"
                                                            required>
                                                    </div>
                                                    <% if (locals.errors && locals.errors.new_password) { %>
                                                        <span class="text-danger"><%- errors.new_password %></span>
                                                        <% } %>
                                                </div>
                                            </div>
                                            <div class="form-group row mb-25">
                                                <div class="col-sm-3 d-flex aling-items-center">
                                                    <label for="inputNameIcon"
                                                        class=" col-form-label color-dark fs-14 fw-500 align-center">Current
                                                        Password
                                                    </label>
                                                </div>
                                                <div class="col-sm-9">
                                                    <div class="with-icon">
                                                        <span class="la-password lar color-gray"></span>
                                                        <input type="password"
                                                            class="form-control is-invalid  ih-medium ip-gray radius-xs b-light"
                                                            id="inputNameIcon" placeholder=""
                                                            name="confirm_new_password" required>
                                                    </div>
                                                    <% if (locals.errors && locals.errors.confirm_new_password) { %>
                                                        <span class="text-danger"><%- errors.confirm_new_password
                                                                %></span>
                                                        <% } %>
                                                </div>
                                            </div>

                                            <div class="layout-button mt-25">
                                                <button type="button"
                                                    class="btn btn-default btn-squared border-normal bg-normal px-20 ">cancel</button>
                                                <button type="submit"
                                                    class="btn btn-primary btn-default btn-squared px-30">save</button>
                                            </div>
                                        </form>
                                    </div>
                </div>
            </div>
        </div>
    </div>
</div>